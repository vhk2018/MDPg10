<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/MDF1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="MDF1 : " />

    <TextView
        android:id="@+id/mdf1_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/MDF1"
        android:layout_marginStart="69dp"
        android:text="fafsd" />

    <TextView
        android:id="@+id/MDF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="116dp"
        android:gravity="center"
        android:text="MDF2 : " />

    <TextView
        android:id="@+id/mdf2_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/mdf1_string"
        android:layout_alignTop="@+id/MDF2"
        android:text="fafsd" />

    <TextView
        android:id="@+id/Arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="206dp"
        android:gravity="center"
        android:text="Arrows : " />

    <TextView
        android:id="@+id/arrow_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/mdf1_string"
        android:layout_alignTop="@+id/Arrow"
        android:text="" />


</RelativeLayout>